<section id="prop-<%= detail.name %>">
  <h2 class="signature"><%= detail.name %></h2>

  <%# we only show a short version, with a link to separate page %>
  <% if detail.has_children? %>
    <%= truncate detail.docs, 250 %>

<%# we show everything %>
  <% else %>
    <%= detail.docs %>
    <%= subsection :props, :title => "Properties", :collection => detail.props, :partial => 'tokens/typed_name' %>
  <% end %>
</section>
